<!DOCTYPE html>
<html>
    <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>

    <div class="contenedor-movie">
        
      <h2>Agregar una pelicula</h2>

      <div class="errores">
        <% if(typeof errors != 'undefined'){ %>
            <p class="errorTitle">ERROR</p>
            <ul>
                <% for(let i=0; i<errors.length; i++){ %>
                    <li style="font-size: 13px"><%= errors[i].msg %> </li> 
                <% } %> 
            </ul> 
            <% } %> 
        </div>

      <form action="/movies/create" method="POST">
        <div>
          <label for="#">Title</label>
          <input type="text" name="titulo">
        </div>
        
        <div>
          <label for="#">Rating</label>
          <input type="number" name="rating">
        </div>
        
        <div>
          <label for="#">Awards</label>
          <input type="number" name="awards">
        </div>

        <div>
          <label for="#">Fecha de estreno</label>
          <input type="date" name="release_date">
        </div>
        
        <div>
          <label for="#">Duraci√≥n en minutos</label>
          <input type="number" name="length">
        </div>
        
        <div>
          <label for="#">Genero</label>
          <select name="genre" id="">
            <% for ( let i = 0; i< generos.length; i++) { %>
              <option value="<%= i+1 %>"><%= generos[i].name %></option>
            <% } %>
          </select>
        </div>
        <button type="submit">Crear</button>
      </form>
      


    </div>
  </body>
  <%- include('./partials/footer') %>
</html>

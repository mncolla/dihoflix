<!DOCTYPE html>
<html>
    <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>

    <div class="contenedor-movie">
        
      <h2>Formulario de edición</h2>

      <form action="/movies/edit/<%=pelicula.title%>?_METHOD=PUT" method="POST">
        <div>
          <label for="#">Title</label>
          <input type="text" name="titulo" value="<%=pelicula.title%>">
        </div>
        
        <div>
          <label for="#">Rating</label>
          <input type="number" name="rating" value="<%=pelicula.rating%>">
        </div>
        
        <div>
          <label for="#">Awards</label>
          <input type="number" name="awards" value="<%=pelicula.awards%>">
        </div>

        <div>
          <label for="#">Fecha de estreno</label>
          <input type="date" name="release_date" value="<%=pelicula.release_date%>">
        </div>
        
        <div>
          <label for="#">Duración en minutos</label>
          <input type="number" name="length"  value="<%=pelicula.length%>">
        </div>
        
        <div>
          <label for="#">Genero</label>
          <select name="genre" id="">
            <% for ( let i = 0; i < generos.length; i++) { %>
              
              <% if (generos[i].id == pelicula.genre_id) { %>
                <option value="<%= i+1 %>" selected><%= generos[i].name %></option>
              <% } else { %>
                <option value="<%= i+1 %>"><%= generos[i].name %></option>
              <% } %>    
            <% } %>
          </select>
        </div>
        <button type="submit">Cambiar</button>
      </form>
      


    </div>
  </body>
  <%- include('./partials/footer') %>
</html>
